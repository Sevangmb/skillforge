
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Les utilisateurs peuvent lire/écrire leurs propres données, mais la liste est lisible pour le classement
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null; // Permet de lister les utilisateurs pour le classement
    }

    // Les compétences sont en lecture seule pour les utilisateurs authentifiés
    match /skills/{skillId} {
      allow read: if request.auth != null;
      allow write: if false; // Les compétences doivent être gérées depuis le backend/admin
    }

    // Le contenu IA peut être lu/écrit par les utilisateurs authentifiés
    match /ai_content/{contentId} {
       allow read, write: if request.auth != null;
    }
  }
}
